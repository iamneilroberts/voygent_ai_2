# Voygent v2 - Environment Configuration for Render Deployment
# Copy this file to .env and configure for local development
# For Render deployment, set these via dashboard Environment Variables

# =============================================================================
# LIBRECHAT CORE CONFIGURATION
# =============================================================================

# Server configuration
HOST=0.0.0.0
PORT=3080
NODE_ENV=production

# MongoDB connection (provided by Render MongoDB add-on)
MONGODB_URI=mongodb://localhost:27017/voygent
MONGO_URI=mongodb://localhost:27017/voygent

# =============================================================================
# MCP CONFIGURATION
# =============================================================================

# Enable MCP support
ALLOW_MCP=true

# Allowed origins for MCP connections
# Local development: http://localhost:3080
# Production: https://voygent-librechat.onrender.com
ALLOWED_MCP_ORIGINS=http://localhost:3080

# Cloudflare Workers MCP Server URLs (Production)
MCP_D1_URL=https://d1-database-prod.somotravel.workers.dev/sse
MCP_PROMPT_URL=https://prompt-instructions-d1-mcp.somotravel.workers.dev/sse
MCP_TEMPLATE_URL=https://template-document-mcp.somotravel.workers.dev/sse

# Optional: MCP Authentication
# Set this if your Workers require authentication
MCP_AUTH_KEY=

# =============================================================================
# LLM PROVIDER API KEYS (BYOK - Bring Your Own Keys)
# =============================================================================

# Anthropic Claude API Key (recommended for travel planning)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API Key (alternative/backup)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# MeiliSearch (search functionality)
# Disabled by default - uncomment to enable
# MEILI_HOST=http://meilisearch:7700
# MEILI_MASTER_KEY=your_meili_master_key

# =============================================================================
# CLOUDFLARE CONFIGURATION (for Workers deployment)
# =============================================================================

# Cloudflare Account ID (for wrangler CLI)
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token (for automated deployments)
CLOUDFLARE_API_TOKEN=

# =============================================================================
# GITHUB CONFIGURATION (for Pages publishing)
# =============================================================================

# GitHub Personal Access Token (for template-document-mcp)
GITHUB_TOKEN=

# GitHub repository for Pages publishing
GITHUB_REPO=iamneilroberts/voygent-proposals
GITHUB_OWNER=iamneilroberts

# =============================================================================
# RENDER-SPECIFIC CONFIGURATION
# =============================================================================

# These are automatically set by Render - no need to configure manually
# RENDER=true
# RENDER_SERVICE_NAME=voygent-librechat
# RENDER_EXTERNAL_URL=https://voygent-librechat.onrender.com
# IS_RENDER=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Local database file (for orchestrator in local mode)
DB_FILE=./data/voygen.sqlite
SCHEMA_FILE=./db/schema.sql

# Chrome debug port (for local mcp-chrome)
CHROME_DEBUG_PORT=9222
